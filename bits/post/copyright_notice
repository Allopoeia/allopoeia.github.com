minify = true
---content---
{%
local notice = C.copyright_notice or C.author.default_copyright_notice
U.assert(notice)
local page_year_start = format_date(C.published, "%Y")
local page_year_end = format_date(C.updated, "%Y")
local page_year_range = page_year_start
if page_year_start ~= page_year_end then
	page_year_range = page_year_range .. "&mdash" .. page_year_end
end

local subs = {
	about_url = C.author.about_url,
	display_name = C.author.display_name,
	author_linked = string.format(
		[[<a target="_blank" href="%s">%s</a>]],
		C.author.about_url,
		C.author.display_name
	),
	page_year_range = page_year_range,
}

local text = notice.url_text
if notice.url then
	text = string.format([[<a target="_blank" href="%s">%s</a>]], notice.url, text)
end
text = notice.pre_text .. text .. notice.post_text
%}
{! string.gsub(text, "%%(%w+)%%", subs) !}