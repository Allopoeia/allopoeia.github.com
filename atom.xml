---
layout: null
---
<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom">

<title>Allopoeia</title>
<link href="{{ site.meta.perma-url }}{{ page.url }}" rel="self" />
<link href="{{ site.meta.perma-url }}" />
<updated>{% include common/machine_datetime %}</updated>
<id>{{ site.meta.perma-url }}</id>
<author>
	<name>Allopoeia</name>
	<uri>{% assign _slug = site.nav-items.authors.url %}{% include common/canonical_url %}</uri>
</author>

{% for post in site.posts %}
{% assign _data = post %}
<entry>
	<link href="{% assign _page = post %}{% include common/canonical_url %}" />
	<id>{% assign _page = post %}{% include common/canonical_url %}</id>

{% for cat in post.categories %}
	<category term="{{ cat }}" label="{{ cat | capitalize }}"/>
{% endfor %}

	<title>{{ post.title }}</title>
{% if post.subtitle %}<subtitle>{{ post.subtitle }}</subtitle>{% endif %}

	<rights type="html"><![CDATA[{% include article/copyright_notice %}]]></rights>

	<updated>{% assign _page = post %}{% include article/machine_datetime_latest %}</updated>
	<author>
		<name>{{ post.author }}</name>
		<uri>{% assign _author = post.author %}{% include fetch/author/about-url_absolute %}</uri>
	</author>

	<content type="html"><![CDATA[
{{ post.content }}
	]]></content>
</entry>
{% endfor %}

</feed>
{% assign _temp = null %}{% assign _date_updated = null %}{% assign _post_id = null %}
