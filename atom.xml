---
layout: null
---
<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom">

<title>Allopoeia</title>
<link href="{{ site.url }}{{ page.url }}" rel="self" />
<link href="{{ site.url }}/" />
<updated>{{ site.time | date_to_xmlschema }}</updated>
<id>{{ site.url }}/</id>
<author>
	<name>Allopoeia</name>
	<uri>{{ site.url }}{{ site.nav-items.authors.url }}</uri>
</author>

{% for post in site.posts %}
{% assign _data = post %}
<entry>
	<link href="{{ site.url }}{{ post.url }}" />
	<id>{{ site.url }}{{ post.url }}</id>

	{% for cat in post.categories %}
		<category term="{{ cat }}" label="{{ cat | capitalize }}"/>
	{% endfor %}

	<title>{{ post.title }}</title>
{% if post.subtitle %}<subtitle>{{ post.subtitle }}</subtitle>{% endif %}

	<rights type="html"><![CDATA[{% include article/copyright_notice %}]]></rights>

	<updated>{% if post.last-modified %}{{ post.last-modified | date_to_xmlschema }}{% else %}{{ post.date | date_to_xmlschema }}{% endif %}</updated>
	<author>
		<name>{{ post.author }}</name>
		{% capture _author %}{{ post.author }}{% endcapture %}
		<uri>{% include common/fetch_author_about-url_absolute %}</uri>
	</author>

	<content type="html"><![CDATA[
{{ post.content }}
	]]></content>
</entry>
{% endfor %}

</feed>
{% assign _temp = null %}{% assign _date_updated = null %}{% assign _post_id = null %}
