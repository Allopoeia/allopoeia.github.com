---
layout: nil
---

<?xml version="1.0" encoding="utf-8"?>
<!-- <?xml-stylesheet type="text/css" href="/css/feed.css"?> -->

<feed xmlns="http://www.w3.org/2005/Atom">

<title>Allopoeia</title>
<link href="http://allopoeia.komiga.com/atom.xml" rel="self"/>
<link href="http://allopoeia.komiga.com/"/>
<updated>{{ site.time | date_to_xmlschema }}</updated>
<id>http://allopoeia.komiga.com/</id>

{% for post in site.posts %}
<entry>
	<title>{{ post.title }}</title>
	<link href="http://allopoeia.komiga.com{{ post.url }}"/>
	<updated>{{ post.last-modified | date_to_xmlschema }}</updated>
	<author>
		<name>{{ post.author }}</name>
	</author>
	<id>http://allopoeia.komiga.com{{ post.id }}</id>
	<content type="html">
{{ post.content | xml_escape }}
	</content>
</entry>
{% endfor %}

</feed>
