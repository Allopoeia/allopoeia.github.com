<!--
	Parameters:
		_page: the page object to inspectify; must contain at least 'date' and should contain 'last-modified'; [default: page]
		_latest: whether to use the latest date; [default: false] shortcut: article/format_datetime_latest
		>> common/format_datetime
-->
{% endcomment %}

{% unless _page %}
	{% assign _page = page %}
{% endunless %}

{% if _latest and _page.last-modified %}
	{% assign _datetime = _page.last-modified %}
{% else %}
	{% assign _datetime = _page.date %}
{% endif %}

{% include common/format_datetime %}

{% assign _latest = null %}{% assign _page = null %}
{% endcapture %}{% include common/minify_reprint %}