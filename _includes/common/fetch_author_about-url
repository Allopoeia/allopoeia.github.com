{% unless _author %}
	{% assign _author = page.author %}
{% endunless %}

{% assign _ao = site.authors[_author] %}

{% if _ao %}
	{% if _ao.about-relative and _fetch_absolute %}{{ site.url }}{% endif %}{{ _ao.about-url }}
{% endif %}

{% assign _ao = null %}{% assign _author = null %}{% assign _fetch_absolute = null %}
{% endcapture %}{{ __raw | replace: '	', '' | strip_newlines }}{% assign __raw = null %}