sitemap = false
---content---
<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom">

<title>Allopoeia</title>
<link href="{{ Site.url }}{{ C.url }}" rel="self" />
<link href="{{ Site.url }}" />
<updated>{#{ format_time_iso(Site.posts[1].last_modified) }#}</updated>
<id>{{ Site.url }}</id>
<author>
	<name>Allopoeia</name>
	<uri>{{ Site.url }}</uri>
</author>

{% for _, post in pairs(Site.posts) do %}
<entry>
	<link href="{{ canonical_url(post) }}" />
	<id>{{ canonical_url(post) }}</id>

{% for _, cat in pairs(post.categories) do %}
	<category term="{{ cat }}" label="{{ capitalize(cat) }}"/>
{% end %}

	<title>{{ post.title }}</title>
{% if post.subtitle then %}
	<subtitle>{{ post.subtitle }}</subtitle>
{% elseif post.layout == "link-post" then %}
	<subtitle type="html"><![CDATA[{@ "bits/link-post/anchor", {post = post, with_arrow = true} @}]]></subtitle>
{% end %}

	<rights type="html"><![CDATA[{@ "post/copyright_notice", post @}]]></rights>

	<published>{{ format_time_iso(post.time_published) }}</published>
	<updated>{{ format_time_iso(post.time_updated) }}</updated>

	<author>
		<name>{{ post.author.display_name }}</name>
		<uri>{{ post.author.about_url }}</uri>
	</author>

	<content type="html"><![CDATA[
{! post.content !}
	]]></content>
</entry>
{% end %}

</feed>